:- module measurement_units.
:- interface.
:- type memory.
:- type memory_units
	where	type_is_abstract_enum(1).
:- type percent.
:- type probability.
:- type time.
:- type_representation(memory, is_word_aligned_ptr).
:- type_representation(memory_units, du_repn(enum("units_words", "units_bytes", [], []))).
:- type_representation(percent, du_repn(notag("percent_float", []))).
:- type_representation(probability, is_eqv_to(float)).
:- type_representation(time, du_repn(notag("time_sec", []))).
