INSTALL_PREFIX := $(INSTALL_PREFIX)/extras

-include Mmake.params

.PHONY: default_target
default_target:	doit dots

depend:	doit.depend dots.depend

.PHONY: install
install:
	[ -d $(INSTALL_BINDIR) ] || mkdir -p $(INSTALL_BINDIR)
	cp monte $(INSTALL_BINDIR)

.PHONY: check
check:
	true
