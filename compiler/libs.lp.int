:- module (libs.lp).
:- interface.
:- import_module io.
:- import_module list.
:- import_module map.
:- import_module pair.
:- import_module term.
:- import_module varset.
:- type coeff == (pair.pair((term.var), float)).
:- type direction
	--->	max 
	;	min .
:- type equation
	--->	eqn((list.list(((libs.lp).coeff))), ((libs.lp).operator), float).
:- type equations == (list.list(((libs.lp).equation))).
:- type objective == (list.list(((libs.lp).coeff))).
:- type operator
	--->	(=<) 
	;	(=) 
	;	(>=) .
:- type result
	--->	unsatisfiable 
	;	satisfiable(float, (map.map((term.var), float))).
:- pred lp_solve(((libs.lp).equations), ((libs.lp).direction), ((libs.lp).objective), (varset.varset), (list.list((term.var))), ((libs.lp).result), (io.io), (io.io)).
:- mode lp_solve((builtin.in), (builtin.in), (builtin.in), (builtin.in), (builtin.in), (builtin.out), (builtin.di), (builtin.uo)) is det.
