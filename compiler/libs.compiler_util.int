:- module (libs.compiler_util).
:- interface.
:- use_module io.
:- use_module list.
:- use_module maybe.
:- use_module parse_tree.
:- use_module (libs.globals).
:- use_module (parse_tree.error_spec).
:- type warning_or_error
    --->    we_warning 
    ;       we_error .
:- pred add_error(parse_tree.error_spec.error_phase, list.list(parse_tree.error_spec.format_piece), list.list(parse_tree.error_spec.error_spec), list.list(parse_tree.error_spec.error_spec)).
:- mode add_error((builtin.in), (builtin.in), (builtin.in), (builtin.out)) is det.
:- pred add_warning(parse_tree.error_spec.error_phase, list.list(parse_tree.error_spec.format_piece), list.list(parse_tree.error_spec.error_spec), list.list(parse_tree.error_spec.error_spec)).
:- mode add_warning((builtin.in), (builtin.in), (builtin.in), (builtin.out)) is det.
:- pred maybe_is_error(maybe.maybe_error, string).
:- mode maybe_is_error((builtin.in), (builtin.out)) is semidet.
:- pred record_warning(libs.globals.globals, io.io, io.io).
:- mode record_warning((builtin.in), (builtin.di), (builtin.uo)) is det.
:- pred report_warning(io.output_stream, libs.globals.globals, string, io.io, io.io).
:- mode report_warning((builtin.in), (builtin.in), (builtin.in), (builtin.di), (builtin.uo)) is det.
:- pred warning_or_error_severity(libs.compiler_util.warning_or_error, parse_tree.error_spec.error_severity).
:- mode warning_or_error_severity((builtin.in), (builtin.out)) is det.
:- pred warning_or_error_string(libs.compiler_util.warning_or_error, string).
:- mode warning_or_error_string((builtin.in), (builtin.out)) is det.
:- mode warning_or_error_string((builtin.out), (builtin.in)) is semidet.
