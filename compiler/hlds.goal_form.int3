:- module (hlds.goal_form).
:- interface.
:- type goal_loop_or_throw_status
	where	type_is_abstract_enum(1).
:- type goal_loop_status
	where	type_is_abstract_enum(1).
:- type goal_throw_status
	where	type_is_abstract_enum(1).
:- type has_subgoals
	where	type_is_abstract_enum(1).
:- type is_termvar_needed
	where	type_is_abstract_enum(1).
:- type_representation(goal_loop_or_throw_status, du_repn(enum("can_loop_or_throw", "cannot_loop_or_throw", [], []))).
:- type_representation(goal_loop_status, du_repn(enum("can_loop", "cannot_loop", [], []))).
:- type_representation(goal_throw_status, du_repn(enum("can_throw", "cannot_throw", [], []))).
:- type_representation(has_subgoals, du_repn(enum("has_subgoals", "does_not_have_subgoals", [], []))).
:- type_representation(is_termvar_needed, du_repn(enum("termvar_is_not_needed", "termvar_is_needed", [], []))).
