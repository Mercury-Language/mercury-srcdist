#-----------------------------------------------------------------------------%

GMLS := $(wildcard *.gml)

PPMS = $(GMLS:.gml=.ppm)

XVS = $(GMLS:.gml=.xv)

#-----------------------------------------------------------------------------%

main_target : $(PPMS)

xv : $(XVS)

%.ppm: %.gml ../main
	time cpp -P $< | ../main

%.xv: %.ppm
	xv $*.ppm &

#-----------------------------------------------------------------------------%
